{
    "name": "vscode-3dviewer",
    "displayName": "vscode-3dviewer",
    "description": "Preview 3D meshes in VSCode",
    "version": "0.1.0",
    "publisher": "slevesque",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:3dviewer.openInViewer",
        "onCommand:3dviewer.openInEditor",
        "onCommand:3dviewer.openEditor"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "3dformat",
                "extensions": [
                    ".3ds",
                    ".dae",
                    ".fbx",
                    ".obj",
                    ".stl"
                ]
            }
        ],
        "commands": [
            {
                "command": "3dviewer.openInViewer",
                "title": "Open in Viewer",
                "category": "3DViewer"
            },
            {
                "command": "3dviewer.openInEditor",
                "title": "Open in Editor",
                "category": "3DViewer"
            },
            {
                "command": "3dviewer.openEditor",
                "title": "Open THREE.js Editor",
                "category": "3DViewer"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "3dviewer.openEditor"
                }
            ],
            "explorer/context": [
                {
                    "command": "3dviewer.openInViewer",
                    "when": "resourceLangId == 3dformat"
                },
                {
                    "command": "3dviewer.openInEditor",
                    "when": "resourceLangId == 3dformat"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/dat-gui": "^0.6.3",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/three": "^0.84.30",
        "@types/webgl-ext": "0.0.29",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    }
}
